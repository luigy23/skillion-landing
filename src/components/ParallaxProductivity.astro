---
import FeatureCard from './FeatureCard.astro';
import { Image } from 'astro:assets';
import InstagramIcon from '../assets/pixelartAssets/icons/ig_icon.png';
import TikTokIcon from '../assets/pixelartAssets/icons/tt_icon.png';

// Reward Asset URLs
const grassUrl = "/src/assets/pixelartAssets/rewards/grass.png";
const knightUrl = "/src/assets/pixelartAssets/rewards/knight.png";
const tree2Url = "/src/assets/pixelartAssets/rewards/tree2.png";
---

<section
  id="productivity-section"
  class="relative w-full min-h-screen overflow-visible"
  style="background-color: #97b7d1;"
>
  <!-- Parallax container for reward assets -->
  <div data-parallax-root-rewards class="absolute inset-0 overflow-visible pointer-events-none">
    <img id="parallax-grass" src={grassUrl} alt="Grass"
         class="absolute pixel-art" />
    <img id="parallax-knight" src={knightUrl} alt="Knight"
         class="absolute pixel-art" />
    <img id="parallax-tree2" src={tree2Url} alt="Tree 2"
         class="absolute pixel-art" />
  </div>

  <!-- Content -->
  <div class="relative z-10 py-16 px-4">
    <div class="container mx-auto max-w-6xl">
      <!-- First Section: How Skillion Gamifies Your Productivity -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-5xl font-bold mb-4 font-poppins text-gray-800">
          How <span class="text-shine">Skillion</span> Gamifies <span class="text-gaming-gold">Your Productivity</span>
        </h2>
        <p class="text-lg md:text-xl text-white max-w-2xl mx-auto">
          Discover the gamified productivity app that turns your daily routine into your most epic adventure
        </p>
      </div>
      
      <!-- Simple grid layout for cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        <FeatureCard 
          icon="üß†"
          title="Customize Your Real-Life Skills"
        >
          Create unique skills like 'Fitness', 'Programming', 'Reading' or 'Networking'. With Skillion, every area of your life becomes an RPG skill you can level up.
        </FeatureCard>
        
        <FeatureCard 
          icon="‚öîÔ∏è"
          title="Missions that Transform Habits"
        >
          Every daily task (workout, study, work) becomes an epic quest. Complete challenges and earn real XP that reflects in your life progress.
        </FeatureCard>
        
        <FeatureCard 
          icon="üèÜ"
          title="Gamified Progress System"
          class="md:col-span-2 md:col-start-1 md:justify-self-center md:max-w-md lg:col-span-1 lg:col-start-auto lg:justify-self-auto lg:max-w-none"
        >
          Watch XP bars grow, unlock unique achievements and customize your journey. Gamification makes habit-building addictively fun.
        </FeatureCard>
      </div>

      <!-- Second Section: Join the Personal Gamification Revolution -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold mb-6 font-poppins text-gray-800 text-stroke-blue">
          Join the <span class="text-gaming-gold">Personal Gamification</span> Revolution
        </h2>
        <p class="text-lg md:text-xl text-white mb-12 max-w-2xl mx-auto">
          Be part of the pioneer community gamifying their lives with Skillion. Early access, exclusive rewards, and the chance to shape the future of gamified productivity.
        </p>
        
        <div class="flex justify-center gap-4 mb-12">
          <div class="social-button-container">
            <a href="https://instagram.com/skillion.app" target="_blank" class="pixel-btn pixel-instagram">
              <Image src={InstagramIcon} alt="Instagram" class="w-8 h-8 md:w-10 md:h-10 pixel-art" />
            </a>
            <span class="social-title">Instagram</span>
          </div>
          
          <div class="social-button-container">
            <a href="https://instagram.com/skillion_es" target="_blank" class="pixel-btn pixel-instagram">
              <Image src={InstagramIcon} alt="Instagram ES" class="w-8 h-8 md:w-10 md:h-10 pixel-art" />
            </a>
            <span class="social-title">Instagram ES</span>
          </div>
          
          <div class="social-button-container">
            <a href="https://tiktok.com/@skillion.app" target="_blank" class="pixel-btn pixel-tiktok">
              <Image src={TikTokIcon} alt="TikTok" class="w-8 h-8 md:w-10 md:h-10 pixel-art" />
            </a>
            <span class="social-title">TikTok</span>
