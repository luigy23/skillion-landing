---
interface Props {
  icon: string;
  title: string;
  description?: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-col items-center text-center group">
  <div class="w-16 h-16 mb-4 flex items-center justify-center bg-pixel-card border-2 border-pixel-border shadow-pixel group-hover:shadow-pixel-hover group-hover:border-gaming-gold transition-all duration-300 transform group-hover:-translate-y-1">
    <span class="text-2xl">{icon}</span>
  </div>
  <h3 class="text-xl font-bold text-pixel-text mb-2 font-poppins">{title}</h3>
  {description ? (
    <p class="text-pixel-text-secondary font-poppins leading-relaxed">{description}</p>
  ) : (
    <div class="text-pixel-text-secondary font-poppins leading-relaxed">
      <slot />
    </div>
  )}
</div>
